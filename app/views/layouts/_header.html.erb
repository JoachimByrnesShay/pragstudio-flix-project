<header>
  <nav>
    <%= link_to image_tag('logo.png'), root_path %>
    <ul class="left">
      <%# <li>  
       <%= link_to "#{session[:intended_url]}", "" 
       </li> -%>
      <li>
        <%= nav_link_to('Released movies', movies_path)  %>
      </li>
      <li>
        <%= nav_link_to 'Upcoming movies', filter_movie_path(:upcoming)%>
      </li>
      <li>
        <%= nav_link_to "Recent movies", filter_movie_path(:recent) %>
      </li>
      <li>
        <%= nav_link_to "Hits", filter_movie_path(:hits) %>
      </li>
      <li>
        <%= nav_link_to "Flops", filter_movie_path(:flops) %>
      </li>
      
    </ul>
    <ul class="right">
      <% if current_user && current_user.admin? %>
      <li>
        <%= link_to "Admin Console", admin_index_path, class: "button" %>
      </li>
      <% end %>
      <% if session[:user_id] %>
      <li>
        <%= link_to "Hi #{current_user.name}", current_user, class: "button" %>
      </li>
      <li>
        <%= link_to "Log Out", session_path, method: :delete, class: "button" %>
      </li>
      <li>
        <%= link_to "Account Settings", edit_user_path(current_user), class: "button" %>
      <% else %>
      <li>
        <%= link_to "Sign In", signin_path, class: "button" %>
      </li>
    	<li>
    	<%= link_to 'Register', signup_path, class:"button" %>
    </li>
    <% end %>
    </ul>
  </nav>
</header>