
<% if object.errors.any? %>
	<section class="errors">
		<h2> Sorry, your form could not be saved. </h2>
		<h3> Please correct the following 
			<%= pluralize(object.errors.count, "error") %>.
		</h3>
		<ul>
		<% object.errors.full_messages.each do |e| %>
			<li> <%= e %> </li>
		<% end %>
		</ul>

	</section>
<% end %>
